<div class="profile-container">
    <div class="profile-content">
        <div class="profile-info">
            <h2 class="profile-name">{{user.name}}</h2>
            <p class="profile-url">{{user.email}}</p>
            <span class="creation-date">{{user.rol}}</span>
        </div>
        <div class="profile-image">
            <div class="image-upload-container">
                <div class="image-preview">
                    {{#if user.img}}
                        <img id="image-preview" src={{user.img}} alt="imagen del perfil elegida">
                    {{else}}
                        <img id="image-preview" src='/img/Unknown_person.webp' alt="No hay imagen cargada">
                    {{/if}}
                </div>
                <div class="upload-controls">
                    <label for="file-input" class="upload-btn">Imagen</label>
                    <input id="file-input" type="file" accept="image/*" />
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/profile.js"></script>